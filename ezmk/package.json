    "test": "sudo npm i -g && ezmk",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "author": "nahoy",
  "license": "ISC",
  "dependencies": {
    "chalk": "^3.0.0",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^13.1.8",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  }
}
