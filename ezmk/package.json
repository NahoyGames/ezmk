{
  "name": "ezmk",
  "version": "1.0.0",
  "description": "easy make(ezmk) --> easily build your c/c++ projects",
  "repository": "github.com/NahoyGames/ezmk",
  "main": "./bin/index.js",
  "bin": {
    "ezmk": "./bin/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"npm run build\"",
    "create": "npm run build && npm run test",
